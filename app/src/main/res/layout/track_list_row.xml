<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="5dip" >

    <LinearLayout android:id="@+id/thumbnail"
                  android:layout_width="wrap_content"
                  android:layout_height="wrap_content"
                  android:padding="3dip"
                  android:layout_alignParentLeft="true"
                  android:layout_marginRight="5dip">


        <com.loopj.android.image.SmartImageView
            android:layout_width="50dip"
            android:layout_height="50dip"
            android:id="@+id/track_image" />

    </LinearLayout>

    <TextView
        android:id="@+id/trackName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/thumbnail"
        android:layout_toRightOf="@+id/thumbnail"
        android:text="Hail, Kill and Die"
        android:textColor="#ffdadada"
        android:typeface="sans"
        android:textSize="15dip"
        android:textStyle="bold"/>

    <TextView
        android:id="@+id/trackArtistName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Manowar"
        android:textColor="#ff9f9f9f"
        android:typeface="sans"
        android:textSize="15dip"
        android:textStyle="bold"
        android:layout_below="@+id/trackName"
        android:layout_alignLeft="@+id/trackName"/>

    <TextView
        android:id="@+id/trackListenersCount"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:textColor="#ffa7a7a7"
        android:textSize="13dip"
        android:text="4665456"
        android:singleLine="true"
        android:layout_below="@+id/trackArtistName"
        android:layout_toRightOf="@+id/trackArtistName"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="@string/listeners"
        android:id="@+id/textView"
        android:singleLine="true"
        android:layout_below="@+id/trackArtistName"
        android:layout_toRightOf="@+id/thumbnail"
        android:textSize="13dip"
        android:layout_marginBottom="2dp"/>


</RelativeLayout>